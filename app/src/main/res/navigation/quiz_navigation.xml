<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_navigation"
    app:startDestination="@id/quiz">

    <navigation
        android:id="@+id/quiz"
        app:startDestination="@id/startFragment">
        <fragment
            android:id="@+id/resultFragment"
            android:name="com.example.quizapp.fragments.quiz.ResultFragment"
            android:label="fragment_result"
            tools:layout="@layout/fragment_result">
            <action
                android:id="@+id/action_resultFragment_to_startFragment"
                app:destination="@id/startFragment"
                app:popUpTo="@id/startFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/questionFragment"
            android:name="com.example.quizapp.fragments.quiz.QuestionFragment"
            android:label="fragment_question"
            tools:layout="@layout/fragment_question">
            <action
                android:id="@+id/action_questionFragment_to_resultFragment"
                app:destination="@id/resultFragment" />
            <action
                android:id="@+id/action_questionFragment_to_startFragment"
                app:destination="@id/startFragment"
                app:popUpTo="@id/startFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/startFragment"
            android:name="com.example.quizapp.fragments.quiz.StartFragment"
            android:label="fragment_start"
            tools:layout="@layout/fragment_start">
            <action
                android:id="@+id/action_startFragment_to_questionFragment"
                app:destination="@id/questionFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/history"
        android:name="com.example.quizapp.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.quizapp.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>